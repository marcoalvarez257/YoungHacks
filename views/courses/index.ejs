<% include ../partials/header_2 %>


<div class="container">
    <div class="row my-3">
        <div class="col-lg-3">
            <h1 class="my-4">Categories</h1>
            <ul class="nav nav-tabs list-group">
                <li><a href="#home" data-toggle="tab" class="list-group-item">Home</a></li>
                <li><a href="#web_tab" data-toggle="tab" class="list-group-item">Web Development</a></li>
                <li><a href="#mobile_tab" data-toggle="tab" class="list-group-item">Mobile Apps</a></li>
                <li><a href="#game_tab" data-toggle="tab" class="list-group-item">Game Developement</a></li>
                <li><a href="#database_tab" data-toggle="tab" class="list-group-item">Databases</a></li>
            </ul>
        </div>
        <div class="col-lg-9">
            <div id="myTabContent" class="tab-content">
                <!-- Home Tab -->
                <div class="tab-pane active in" id="home">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="http://images6.fanpop.com/image/photos/42700000/Python-Programming-Assignment-Writing-Help-derricko1-42797867-900-350.jpg"
                                    class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="https://www.informaticsinc.com/application/files/3815/5544/9509/Informatics-Blog-Images-900x350.jpg"
                                    class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="https://www.cmu.edu/tepper/programs/mba/assets/images/apply-online-900x350-min.jpg"
                                    class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <div class="row my-3">
                        <% courses.forEach(function(course){ %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="/home/courses/<%= course._id %>">
                                    <img class="card-img-top" src="/displayImage/<%= course.imagePath %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/home/courses/<%= course._id %>"><%= course.name %></a>
                                    </h4>
                                    <h5 class="card-subtitle mb-2 text-muted">By: <%= course.author %></h5>
                                    <p class="card-text">
                                        <%= course.description.substring(0, 100) %>...
                                    </p>
                                    <h6 class="mb-2 text-muted">
                                        <%= course.difficulty %>
                                    </h6>
                                </div>
                                <div class="card-footer">
                                    <form action="/home/addFavourite/<%= currentUser._id%>/<%= course._id%>?_method=PUT"
                                        method="POST">
                                        <small class="text-muted">
                                            <button class="btn btn-primary">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </small>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <%  }); %>
                    </div>
                </div>

                <!-- Web Development Tab -->
                <div class="tab-pane fade" id="web_tab">

                    <div class="col-lg-9">
                            <img src="/image/web_dev.jpeg" class="d-block w-100" alt="Image">
                    </div>

                    <div class="row my-3">
                        <% courses.forEach(function(course){ %>
                        <% if(course.categories === "web_development"){ %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="/home/courses/<%= course._id %>"><img
                                        class="card-img-top rounded mx-auto d-block"
                                        src="/displayImage/<%= course.imagePath %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/home/courses/<%= course._id %>"><%= course.name %></a>
                                    </h4>
                                    <h5 class="card-subtitle mb-2 text-muted">By: <%= course.author %></h5>
                                    <p class="card-text">
                                        <%= course.description.substring(0, 100) %>...
                                    </p>
                                    <h6 class="mb-2 text-muted"><%= course.difficulty %></h6>
                                </div>
                                <div class="card-footer">
                                    <form action="/home/addFavourite/<%= currentUser._id%>/<%= course._id%>?_method=PUT"
                                        method="POST">
                                        <small class="text-muted">
                                            <button class="btn btn-primary">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </small>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <%  } %>
                        <% }); %>
                    </div>
                </div>

                <!-- Mobile Application Tab -->
                <div class="tab-pane fade" id="mobile_tab">

                        <div class="col-lg-9">
                                <img src="/image/app_dev.jpg" class="d-block w-100" alt="Image">
                        </div>

                    <div class="row my-3">

                        <% courses.forEach(function(course){ %>
                        <% if(course.categories === "mobile_apps"){ %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="/home/courses/<%= course._id %>"><img
                                        class="card-img-top rounded mx-auto d-block"
                                        src="/displayImage/<%= course.imagePath %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/home/courses/<%= course._id %>"><%= course.name %></a>
                                    </h4>
                                    <h5 class="card-subtitle mb-2 text-muted">By: <%= course.author %></h5>
                                    <p class="card-text">
                                        <%= course.description.substring(0, 100) %>...
                                    </p>
                                    <h6 class="mb-2 text-muted"><%= course.difficulty %></h6>
                                </div>
                                <div class="card-footer">
                                    <form action="/home/addFavourite/<%= currentUser._id%>/<%= course._id%>?_method=PUT"
                                        method="POST">
                                        <small class="text-muted">
                                            <button class="btn btn-primary">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </small>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <% }); %>
                    </div>
                </div>

                <!-- Game Developement Tab -->
                <div class="tab-pane fade" id="game_tab">

                        <div class="col-lg-9">
                                <img src="/image/game_dev.png" class="d-block w-100" alt="Image">
                        </div>

                    <div class="row my-3">
                        <% courses.forEach(function(course){ %>
                        <% if(course.categories === "game_development"){ %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="/home/courses/<%= course._id %>"><img
                                        class="card-img-top rounded mx-auto d-block"
                                        src="//displayImage/<%= course.imagePath %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/home/courses/<%= course._id %>"><%= course.name %></a>
                                    </h4>
                                    <h5 class="card-subtitle mb-2 text-muted">By: <%= course.author %></h5>
                                    <p class="card-text">
                                        <%= course.description.substring(0, 100) %>...
                                    </p>
                                    <h6 class="mb-2 text-muted"><%= course.difficulty %></h6>
                                </div>
                                <div class="card-footer">
                                    <form action="/home/addFavourite/<%= currentUser._id%>/<%= course._id%>?_method=PUT"
                                        method="POST">
                                        <small class="text-muted">
                                            <button class="btn btn-primary">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </small>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <% } %>
                        <% }); %>
                    </div>
                </div>

                <!-- Databases Tab -->
                <div class="tab-pane fade" id="database_tab">

                        <div class="col-lg-9">
                                <img src="/image/db.png" class="d-block w-100" alt="Image">
                        </div>

                    <div class="row my-3">

                        <% courses.forEach(function(course){ %>
                        <% if(course.categories === "databases"){ %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="/home/courses/<%= course._id %>"><img
                                        class="card-img-top rounded mx-auto d-block"
                                        src="/displayImage/<%= course.imagePath %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="/home/courses/<%= course._id %>"><%= course.name %></a>
                                    </h4>
                                    <h5 class="card-subtitle mb-2 text-muted">By: <%= course.author %></h5>
                                    <p class="card-text">
                                        <%= course.description.substring(0, 100) %>...
                                    </p>
                                    <h6 class="mb-2 text-muted"><%= course.difficulty %></h6>
                                </div>
                                <div class="card-footer">
                                    <form action="/home/addFavourite/<%= currentUser._id%>/<%= course._id%>?_method=PUT"
                                        method="POST">
                                        <small class="text-muted">
                                            <button class="btn btn-primary">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </small>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <% }); %>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>





