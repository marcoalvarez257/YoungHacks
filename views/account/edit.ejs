<% include ../partials/header_2 %>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-lg-8 my-3">
            <form action="/home/account/<%= currentUser._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="userName" value="<%= foundUser.username %>">
                </div>
                <div class="form-group">
                    <label>Current Password</label>
                    <input type="password" class="form-control" name="currPass">
                </div>
                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" class="form-control" name="newPass">
                </div>
                <div class="form-group">
                    <label>Re-type New Password</label>
                    <input type="password" class="form-control" name="reNewPass">
                </div>
                <div class="form-group text-center mt-5">
                    <button class="btn btn-lg btn-danger">Change Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer_2 %>