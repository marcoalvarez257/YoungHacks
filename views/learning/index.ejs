<% include ../partials/header_2 %>

<div class="container">
    <div class="row justify-content-md-center my-4">
        <div class="col-lg-9">

            <% user.learning.forEach(function(course){ %>
            <div class="card my-3">
                <div class="card-header">
                    <%= course.name %>
                    <form action="/home/my_learning/<%= currentUser._id%>/<%= course._id%>?_method=DELETE"
                        method="POST">
                        <button class="btn btn-light float-right">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <img class="img-thumbnail m-3" src="/displayImage/<%= course.imagePath%>">
                    </div>
                    <div class="col-lg-8">
                        <div class="card-body">
                            <h5 class="card-subtitle text-muted">
                                By: <%= course.author%>
                            </h5>
                            <p class="card-text">
                                <%= course.description.substring(0, 150)%>...
                            </p>
                            <a href="/home/courses/<%= course._id %>/playVideo" class="btn btn-primary float-right">Start</a>
                            <a href="/home/courses/<%= course._id %>"
                                class="btn btn-primary float-right mr-3 mb-2">Details</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>


<% include ../partials/footer_2 %>